<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="-10dp"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <View
            android:id="@+id/topview2"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@color/PurpleNeed" />

        <View
            android:id="@+id/undertopview2"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:background="@drawable/ic_wave" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/candal"
            android:text="Добро пожаловать!"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="280dp"
            app:srcCompat="@drawable/ic_regperson" />

        <LinearLayout
            android:id="@+id/linear_register"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/username"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginTop="-20dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/ic_logperson"
                android:drawablePadding="16dp"
                android:hint="Имя пользователя"
                android:minHeight="48dp"
                android:padding="16dp"
                android:visibility="visible" />


            <EditText
                android:id="@+id/emailfield"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_below="@+id/username"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="16dp"
                android:hint="Электронная почта"
                android:minHeight="48dp"
                android:padding="16dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/password"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_below="@+id/emailfield"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="16dp"
                android:hint="Пароль"
                android:minHeight="48dp"
                android:padding="16dp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/repassword"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_below="@+id/password"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_border"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="16dp"
                android:hint="Подтвердить пароль"
                android:minHeight="48dp"
                android:padding="16dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_below="@+id/repassword"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/candal"
                android:text="Регистрация"
                android:textStyle="bold"
                app:backgroundTint="#641EAA" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_below="@+id/btnRegister"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_bg"
                android:fontFamily="@font/candal"
                android:minHeight="48dp"
                android:text="У вас уже есть аккаунт?"
                android:textSize="13dp"
                android:textStyle="bold"
                app:backgroundTint="#641EAA" />


        </LinearLayout>

        <View
            android:id="@+id/underview2"
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            android:layout_below="@+id/linear_register"
            android:layout_marginTop="-50dp"
            android:background="@drawable/ic_wave2" />


    </RelativeLayout>
</ScrollView>