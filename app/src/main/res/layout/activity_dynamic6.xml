<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".infomaterials.dynamics.dynamic6">


    <ScrollView
        android:id="@+id/scrolling"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="40dp">


            <TextView
                android:id="@+id/sytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="50dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="СИЛА АРХИМЕДА"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/contentText7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/athiti"
                android:text="Закон Архимеда"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/syundertext"
                android:layout_width="375dp"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="140dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="На тело, погружённое в жидкость или газ, действует выталкивающая сила, равная весу жидкости или газа в объёме погружённой части тела."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/syundertext16"
                android:layout_width="375dp"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="240dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="На любой объект, погружённый в воду, действует выталкивающая сила, равная весу вытесненной им жидкости. Таким образом, вес объекта, погружённого в воду, будет отличаться от его веса в воздухе в меньшую сторону. Разница будет равна весу вытесненной воды.  Чем больше плотность среды — тем меньше вес. Именно поэтому погрузившись в воду, мы можем легко поднять другого человека."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="450dp"
                android:background="@color/white"
                android:src="@drawable/arhimedsila" />

            <TextView
                android:id="@+id/syundertext17"
                android:layout_width="375dp"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="630dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="p - плотность жидкости или газа, g - ускорение свободного падения, V - обьем погруженной части тела."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/contentText8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="750dp"
                android:fontFamily="@font/athiti"
                android:text="Условия плавание тел"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="780dp"
                android:background="@color/white"
                android:src="@drawable/arhimedsila1" />


        </androidx.cardview.widget.CardView>


    </ScrollView>

</FrameLayout>