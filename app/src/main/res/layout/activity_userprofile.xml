<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:padding="-10dp"
    android:scrollbars="none"
    tools:context=".UserProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/rl2"
        android:layout_width="360dp"
        android:layout_height="580dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="30dp">


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="135dp"
            android:background="@drawable/ic_wave" />

        <LinearLayout
            android:id="@+id/linear_l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/PurpleNeed"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile_image"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_l2"
            android:layout_marginTop="280dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/username_icon" />

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/user_name"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EditTextUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:fontFamily="sans-serif-thin"
                android:minWidth="48dp"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linear_l3"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="320dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/black" />


        <LinearLayout
            android:id="@+id/linear_l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear_l3"
            android:layout_marginTop="340dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/email_icon" />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:fontFamily="sans-serif-thin"
                android:text="@string/email_name"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/EditTextEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:fontFamily="sans-serif-thin"
                android:minWidth="48dp"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:textStyle="bold" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linear_l4"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="380dp"
            android:layout_marginRight="15dp"
            android:background="@android:color/black" />


        <LinearLayout
            android:id="@+id/linear_l5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_l4"
            android:layout_marginTop="70dp"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnEdit"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/round_bg"
                android:drawableLeft="@drawable/ic_pencil_icon"
                android:fontFamily="@font/candal"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="Редактировать"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                app:backgroundTint="#641EAA" />


            <Button
                android:id="@+id/btnLogout"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_bg"
                android:fontFamily="@font/candal"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:text="Выйти"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold"
                app:backgroundTint="#641EAA" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/PurpleNeed"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />


</RelativeLayout>