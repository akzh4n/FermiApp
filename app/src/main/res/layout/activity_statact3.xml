<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".infomaterials.statics.statact3">


    <ScrollView
        android:id="@+id/scrolling"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="40dp">


            <TextView
                android:id="@+id/sytext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/athiti"
                android:text="ЦЕНТР ТЯЖЕСТИ ТЕЛА"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/syundertext"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/athiti"
                android:text="Центр масс (или центр тяжести) – точка к которой приложена сила тяжести, действующая на тело. В общем случае центр тяжести может и не лежать внутри тела, а выходить за его пределы (например, различные изогнутые длинные предметы, кольца, полукольца и так далее). Рассмотрим основные методы определения положения центра масс тел для некоторых конкретных случаев, возникающих при решении задач по статике:"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="320dp"
                android:fontFamily="@font/athiti"
                android:text="У однородных тел правильной формы"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/syundertext26"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="350dp"
                android:fontFamily="@font/athiti"
                android:text="- (шары, прямоугольники, стержни) центр тяжести совпадает с геометрическим центром. Следует запомнить, что центр тяжести однородной треугольной пластины лежит в точке пересечения ее медиан. Для однородных симметричных тел центр тяжести всегда расположен на оси симметрии."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="510dp"
                android:fontFamily="@font/athiti"
                android:text="Определение положения центра тяжести системы из двух тел с известными центрами тяжести"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/syundertext27"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="590dp"
                android:fontFamily="@font/athiti"
                android:text="- здесь можно использовать замечательное свойство центра тяжести. Подперев центр тяжести, мы обеспечим равновесие тела. Таким образом, центр тяжести системы из двух тел лежит на отрезке, соединяющем их центры тяжести, и делит его в отношении, обратном отношению масс тел:"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="750dp"
                android:baselineAlignBottom="false"
                android:src="@drawable/centazh1"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="880dp"
                android:fontFamily="@font/athiti"
                android:text="Определение положения центра тяжести любой системы тел с известными положениями центров тяжести"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/syundertext31"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="970dp"
                android:fontFamily="@font/athiti"
                android:text="- необходимо ввести систему координат (естественно, начало координат выбрать в точке, относительно которой необходимо рассчитать положение центра тяжести), определить в ней координаты центров тяжести всех тел и найти координаты центра тяжести системы по формуле:"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="1130dp"
                android:baselineAlignBottom="false"
                android:src="@drawable/centazh2"
                android:textAlignment="center" />


        </androidx.cardview.widget.CardView>


    </ScrollView>

</FrameLayout>