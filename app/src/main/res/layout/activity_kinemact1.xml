<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".infomaterials.kinematics.kinemact1">


    <ScrollView
        android:id="@+id/scrolling"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="40dp">


            <TextView
                android:id="@+id/sytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="СИСТЕМА СИ"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/syundertext"
                android:layout_width="390dp"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="100dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="В основу определения всех вспомогательных единиц в системе СИ положены семь основных единиц измерения. Основными физическими величинами в Международной системе единиц (СИ) являются: длина ( l ); масса ( m ); время ( t ); сила электрического тока ( I ); температура по шкале Кельвина (термодинамическая температура) ( T ); количество вещества ( ν ); сила света ( I v )."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="390dp"
                android:layout_height="300dp"
                android:layout_marginTop="250dp"
                android:background="@color/white"
                android:src="@drawable/sy1" />

            <TextView
                android:id="@+id/syundertext2"
                android:layout_width="390dp"
                android:layout_height="200dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="530dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="В Международной системе единиц имеется набор приставок к единицам измерения, которые применяют, если численные значения рассматриваемых величин существенно больше или меньше, чем единица системы, которая применяется без приставки. Эти приставки используются с любыми единицами измерения, в системе СИ они являются десятичными."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="390dp"
                android:layout_height="200dp"
                android:layout_marginTop="710dp"
                android:background="@color/white"
                android:src="@drawable/sy2" />


        </androidx.cardview.widget.CardView>


    </ScrollView>

</FrameLayout>