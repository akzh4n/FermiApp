<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".infomaterials.quantum.quantact7">


    <ScrollView
        android:id="@+id/scrolling"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="40dp">


            <TextView
                android:id="@+id/sytext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/athiti"
                android:text="ЯДЕРНЫЕ РЕАКЦИИ"
                android:textColor="@color/black"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="130dp"
                android:fontFamily="@font/athiti"
                android:text="Ядерная реакция"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/syundertext67"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="160dp"
                android:fontFamily="@font/athiti"
                android:text="– это процесс взаимодействия атомного ядра с другим ядром или элементарной частицей, сопровождающийся изменением состава и структуры ядра и выделением вторичных частиц или γ-квантов. В результате ядерных реакций могут образовываться новые радиоактивные изотопы, которых нет на Земле в естественных условиях."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/syundertext75"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="330dp"
                android:fontFamily="@font/athiti"
                android:text="При ядерных реакциях выполняется несколько законов сохранения: импульса, энергии, момента импульса, заряда. В дополнение к этим классическим законам сохранения при ядерных реакциях выполняется закон сохранения так называемого барионного заряда (то есть числа нуклонов – протонов и нейтронов). Например, в реакции общего вида:"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView51"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="520dp"
                android:baselineAlignBottom="false"
                android:src="@drawable/react1"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/imageView53"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="600dp"
                android:baselineAlignBottom="false"
                android:src="@drawable/react2"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="800dp"
                android:fontFamily="@font/athiti"
                android:text="Энергетический выход ядерной реакции"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/syundertext73"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="830dp"
                android:fontFamily="@font/athiti"
                android:text="Ядерные реакции сопровождаются энергетическими превращениями. Энергетическим выходом ядерной реакции называется величина:"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView52"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="900dp"
                android:baselineAlignBottom="false"
                android:src="@drawable/react3"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/syundertext74"
                android:layout_width="375dp"
                android:layout_height="250dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1100dp"
                android:fontFamily="@font/athiti"
                android:text="где: MA и MB – массы исходных продуктов, MC и MD – массы конечных продуктов реакции. Величина ΔM называется дефектом масс. Ядерные реакции могут протекать с выделением или с поглощением энергии. Во втором случае первоначальная кинетическая энергия исходных продуктов должна превышать величину |Q|, которая называется порогом реакции."
                android:textColor="@color/black"
                android:textSize="14dp" />


        </androidx.cardview.widget.CardView>


    </ScrollView>

</FrameLayout>