<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".infomaterials.dynamics.dynamic5">


    <ScrollView
        android:id="@+id/scrolling"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/view2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="40dp">


            <TextView
                android:id="@+id/sytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="50dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="СИЛА ТРЕНИЯ"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/syundertext"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="100dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="Трение – один из видов взаимодействия тел. Оно возникает в области соприкосновения двух тел при их относительном движении или попытке вызвать такое движение. Трение, как и все другие виды взаимодействия, подчиняется третьему закону Ньютона: если на одно из тел действует сила трения, то такая же по модулю, но направленная в противоположную сторону сила действует и на второе тело."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/syundertext14"
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="340dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="Сухое трение, возникающее при относительном покое тел, называют трением покоя. Сила трения покоя всегда равна по величине внешней вызывающей силе и направлена в противоположную ей сторону. Сила трения покоя не может превышать некоторого максимального значения, которое определяется по формуле:"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="550dp"
                android:background="@color/white"
                android:src="@drawable/silatrenie" />

            <TextView
                android:id="@+id/syundertext15"
                android:layout_width="375dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="680dp"
                android:background="@color/white"
                android:fontFamily="@font/athiti"
                android:text="μ – безразмерная величина, называемая коэффициентом трения покоя, а N – сила реакции опоры."
                android:textColor="@color/black"
                android:textSize="14dp" />


        </androidx.cardview.widget.CardView>


    </ScrollView>

</FrameLayout>